<Window x:Class="D202_assignment_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D202_assignment_1"
        mc:Ignorable="d"
        Title="" Height="450" Width="1025" MinHeight="450" MinWidth="800" Closing="Window_Closing">
    <Grid Name="root" Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="22"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ListView Name="MovieBox" Grid.Row="1" ItemsSource="{Binding Movies}" SelectionMode="Single">
                <ListView.View >
                    <GridView AllowsColumnReorder="False" >

                        <GridViewColumn DisplayMemberBinding="{Binding Path=ID}" Header="ID" Width="100"/>

                        <GridViewColumn DisplayMemberBinding="{Binding Path=Title}" Header="Title" Width="100"/>

                        <GridViewColumn DisplayMemberBinding="{Binding Path=Director}" Header="Director" Width="100"/>

                        <GridViewColumn DisplayMemberBinding="{Binding Path=Genre}" Header="Genre" Width="100"/>
                        
                        <GridViewColumn DisplayMemberBinding="{Binding Path=ReleaseYear}" Header="Release Year" Width="100"/>

                        <GridViewColumn DisplayMemberBinding="{Binding Path=Availability}" Header="Available" Width="100"/>

                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <TabControl Grid.Column="1">
            <TabItem Header="Load/save">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="LoadFileBtn" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Click="LoadFileBtn_Click" >Load File</Button>
                    <Button Name="SaveFileBtn" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Click="SaveFileBtn_Click" >Save File</Button>
                </Grid>
            </TabItem>
            
            <TabItem Header="Add/Edit">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" TextAlignment="Right" >Movie ID:</TextBlock>
                    <TextBox Name="InputMovieID" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="1"/>

                    <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" TextAlignment="Right" >Movie Title:</TextBlock>
                    <TextBox Name="InputMovieTitle" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="3"/>

                    <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="5" TextAlignment="Right" >Movie Director:</TextBlock>
                    <TextBox Name="InputMovieDirector" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="5"/>

                    <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="7" TextAlignment="Right" >Movie Genre:</TextBlock>
                    <TextBox Name="InputMovieGenre" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="7"/>
                    
                    <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="9" TextAlignment="Right" >Movie Release Year:</TextBlock>
                    <TextBox Name="InputMovieReleaseYear" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="9"/>

                    <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="11" TextAlignment="Right" >Movie Available:</TextBlock>
                    <CheckBox Name="InputMovieAvailability" Grid.Column="3" Grid.Row="11" IsChecked="True"/>

                    <Button Name="BTNAddMovie"  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="13" Click="BTNAddMovie_Click">Add Movie</Button>
                    <Button Name="BTNEditMovie" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="13" IsEnabled="False" Click="BTNEditMovie_Click">Edit Movie</Button>
                    
                </Grid>
            </TabItem>
            
            <TabItem Header="Search">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="SearchBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"></TextBox>
                    <Button Name="SearchButton" Grid.Row="1" Grid.Column="4" Click="SearchButton_Click">🔍</Button>
                    <RadioButton Name="SearchRBTitle" Grid.Row="3" Grid.Column="1" GroupName="SerchType" IsChecked="True" Click="SearchRB_Click">By Title</RadioButton>
                    <RadioButton Name="SearchRBID" Grid.Row="3" Grid.Column="2" GroupName="SerchType" Click="SearchRB_Click">By Movie ID</RadioButton>
                    <Button Name="SearchClear" Grid.Row="3" Grid.Column="4" Click="SearchClear_Click">Clear</Button>
                    
                </Grid>
            </TabItem>
            
            <TabItem Header="Sort">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="BTNSortByTitle" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Click="BTNSortByTitle_Click">Sort By Title</Button>
                    <Button Name="BTNSortByID" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="1" Click="BTNSortByID_Click">Sort By ID</Button>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
